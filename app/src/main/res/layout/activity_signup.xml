<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".signup">

    <RelativeLayout
        android:id="@+id/layer1"
        android:layout_width="match_parent"
        android:layout_height="513dp"
        android:background="@drawable/userbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/image_removebg_preview__12__2"
        android:layout_width="142dp"
        android:layout_height="119dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="image_removebg_preview__12__2"
        android:foregroundGravity="center_vertical"
        android:src="@drawable/bglogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <TextView
        android:id="@+id/welcome_back"
        android:layout_width="255dp"
        android:layout_height="49.5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal|center"
        android:gravity="center"
        android:text="Create New Account"
        android:textColor="@color/orange"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226" />

    <RelativeLayout
        android:id="@+id/group_2"
        android:layout_width="413dp"
        android:layout_height="508dp"

        android:layout_marginTop="222dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:id="@+id/grname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="390dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="100dp"
                android:layout_height="29.5dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="23dp"
                android:gravity="left|center"
                android:text="First Name"
                android:textColor="@color/white"
                android:textSize="16sp"

                />

            <View
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="53dp"
                android:background="@drawable/signup_rect" />


            <EditText
                android:id="@+id/editname"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="58dp"
                android:autofillHints=""
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:hint="John"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="#D1D1D1"
                android:textSize="16sp"
                tools:ignore="TextFields,TouchTargetSizeCheck" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grlname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="110dp"
            android:layout_marginBottom="310dp">

            <TextView
                android:id="@+id/lname"
                android:layout_width="100dp"
                android:layout_height="29.5dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="10dp"
                android:gravity="left|center"
                android:text="Last Name"
                android:textColor="@color/white"
                android:textSize="16sp"

                />

            <View
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="41dp"
                android:background="@drawable/signup_rect" />


            <EditText
                android:id="@+id/editlname"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="46dp"
                android:autofillHints=""
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:hint="Doe"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="#D1D1D1"
                android:textSize="16sp"
                tools:ignore="TextFields,TouchTargetSizeCheck" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/gremail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="205dp"
            android:layout_marginBottom="210dp">

            <TextView
                android:id="@+id/email"
                android:layout_width="100dp"
                android:layout_height="29.5dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="10dp"
                android:gravity="left|center"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="16sp"

                />

            <View
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="41dp"
                android:background="@drawable/signup_rect" />


            <EditText
                android:id="@+id/editemail"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="46dp"
                android:autofillHints=""
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:hint="grocezilla@shop.com"
                android:inputType="textWebEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#D1D1D1"
                android:textSize="16sp"
                tools:ignore="TextFields,TouchTargetSizeCheck" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grpass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="297dp"
            android:layout_marginBottom="120dp">

            <TextView
                android:id="@+id/pass"
                android:layout_width="100dp"
                android:layout_height="29.5dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="10dp"
                android:gravity="left|center"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="16sp"

                />

            <View
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="41dp"
                android:background="@drawable/signup_rect" />

            <EditText
                android:id="@+id/passEdit"
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="48dp"

                android:autofillHints=""
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:hint="@string/password_ek1_string"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#D1D1D1"
                android:textSize="16sp"
                tools:ignore="TextFields,TouchTargetSizeCheck" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="420dp"
            android:layout_marginBottom="40dp">

            <Button
                android:id="@+id/btnSignup"
                android:layout_width="300dp"
                android:layout_height="48dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="#D9D9D9"
                android:backgroundTint="#D9D9D9"
                android:onClick="onClick"
                android:text="SIGN UP"
                android:textColor="#DD2C00"
                android:textSize="18sp"
                android:textStyle="bold"


                tools:ignore="TouchTargetSizeCheck" />

        </RelativeLayout>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>