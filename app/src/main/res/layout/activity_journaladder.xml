<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_8"
    android:padding="16dp"
    tools:context=".AddFeatureJournal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/title_bar_layout">

        <TextView
            android:id="@+id/journalPageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Add a Journal"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/saveJournal"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/done_icon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            app:tint="@color/white"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="381dp"
        android:layout_height="556dp"
        android:layout_below="@id/title_bar_layout"
        android:layout_marginVertical="26dp"
        android:background="@drawable/signup_rect"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editJournalTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:hint="Title"
            android:padding="12dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editJournalContent"
            android:layout_width="match_parent"
            android:layout_height="447dp"
            android:layout_marginVertical="8dp"
            android:gravity="top"
            android:hint="Write your journal here"
            android:minLines="15"
            android:padding="12dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textSize="20sp" />


    </LinearLayout>

    <Button
        android:id="@+id/journalDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="DELETE JOURNAL"
        android:fontFamily="sans-serif"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:textSize="16sp"
        android:visibility="gone" />

</RelativeLayout>