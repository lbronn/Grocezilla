<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="@color/orange"
    android:background="@drawable/view_border"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/purchaseTitleRecycler"
        android:text="Grocery Run Title"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginVertical="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/purchaseDescriptionRecycler"
        android:text="Purchase Description"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="17sp"
        android:layout_marginVertical="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/purchaseExpensesRecycler"
        android:text="Total Amount of Purchase"
        android:fontFamily="sans-serif"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="right"
        android:layout_marginVertical="4dp"/>

</LinearLayout>