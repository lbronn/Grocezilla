<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_marginVertical="8dp"
    android:backgroundTint="@color/orange"
    android:background="@drawable/view_border"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/checkerProdNameRecycler"
        android:text="Product Name"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginVertical="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productAvailableRecycler"
        android:text="Product Availability"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="17sp"
        android:layout_marginVertical="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productStoreRecycler"
        android:text="Store Available"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="17sp"
        android:layout_marginVertical="4dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timestampRecycler"
        android:text="Time Written"
        android:fontFamily="sans-serif"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="right"
        android:layout_marginVertical="4dp"/>

</LinearLayout>