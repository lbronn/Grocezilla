<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".featurejounal">

    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/fpc.btn"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/_8" />


        <RelativeLayout
            android:id="@+id/forgot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/fpc.btn"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="0dp">

            <View
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="51dp"
                android:layout_marginEnd="347dp"
                android:layout_marginBottom="645dp"
                android:background="@drawable/signup_rect" />

            <View
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="59dp"
                android:layout_marginEnd="360dp"
                android:layout_marginBottom="653dp"
                android:background="@drawable/b" />


            <View
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="344dp"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="644dp"
                android:background="@drawable/signup_rect" />

            <RelativeLayout
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="344dp"
                android:layout_marginTop="54dp"
                android:layout_marginEnd="27dp"
                android:layout_marginBottom="645dp"
                android:theme="@style/fpc.btn"
                tools:layout_editor_absoluteX="41dp"
                tools:layout_editor_absoluteY="0dp">

                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/circle" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/circle" />

                <View
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="21dp"
                    android:background="@drawable/circle" />


            </RelativeLayout>

            <View
                android:layout_width="360dp"
                android:layout_height="560dp"
                android:layout_marginStart="26dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/signup_rect" />

            <EditText
                android:id="@+id/editname"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="47dp"
                android:layout_marginTop="125dp"
                android:layout_marginEnd="46dp"
                android:layout_marginBottom="556dp"
                android:autofillHints=""
                android:backgroundTint="#000000"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:foregroundTint="@color/orange"
                android:gravity="left|center"
                android:hint="Title"
                android:inputType="textPersonName"
                android:textColor="@color/orange"
                android:textColorHint="#999595"
                android:textSize="23sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/context"
                android:layout_width="324dp"
                android:layout_height="394dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="47dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="181dp"
                android:layout_marginEnd="46dp"
                android:layout_marginBottom="144dp"
                android:autofillHints=""
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:foregroundTint="@color/orange"
                android:gravity="left"
                android:hint="Your text"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textColorHint="#999595"
                android:textSize="16sp" />

        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>