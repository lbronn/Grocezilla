<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <!-- frame -->
    <RelativeLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/_7" />



    </RelativeLayout>

    <!-- logo&welcome-->
    <RelativeLayout
        android:id="@+id/logowelcome"
        android:layout_width="411dp"
        android:layout_height="379dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/image_removebg_preview__12__2"
            android:layout_width="142dp"
            android:layout_height="119dp"
            android:layout_marginStart="127dp"
            android:layout_marginTop="120dp"
            android:foregroundGravity="center_vertical"
            android:contentDescription="image_removebg_preview__12__2"
            android:src="@drawable/bglogo" />

        <RelativeLayout
            android:id="@+id/group_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="95dp"
            android:layout_marginTop="240dp"
            android:gravity="center">

            <TextView
                android:id="@+id/welcome_back"
                android:layout_width="246dp"
                android:layout_height="49.5dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="@string/welcomeback"
                android:textColor="@color/orange"
                android:textSize="27sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sign_in_to_continue"
                android:layout_width="171dp"
                android:layout_height="37.5dp"
                android:layout_gravity="center_horizontal|center"
                android:layout_marginLeft="31dp"
                android:layout_marginTop="37dp"
                android:gravity="center"
                android:text="@string/signin"
                android:textColor="@color/orange"
                android:textSize="15sp" />
        </RelativeLayout>

    </RelativeLayout>

    <!-- login -->
    <RelativeLayout
            android:id="@+id/group_2"
            android:layout_marginTop="379dp"
            android:layout_marginStart="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/email"
            android:layout_width="100dp"
            android:layout_height="29.5dp"
            android:gravity="left|center"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="28dp"
            android:text="@string/email_string"
            android:textColor="@color/white"
            android:textSize="16sp"

            />
        <View
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="58dp"
            android:layout_marginLeft="57dp"
            android:background="@drawable/rect_box" />


        <EditText
            android:id="@+id/editEmail"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="63dp"
            android:autofillHints=""
            android:backgroundTint="@android:color/transparent"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:hint="@string/email"
            android:inputType="textWebEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFE"
            android:textSize="16sp"

            tools:ignore="TextFields,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/password"
            android:layout_width="100dp"
            android:layout_height="29.5dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="120dp"
            android:gravity="left"
            android:text="@string/password_string"
            android:textColor="@color/white"
            android:textSize="16sp"

            />
        <View
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="145dp"
            android:layout_marginLeft="57dp"
            android:background="@drawable/rect_box" />


        <EditText
            android:id="@+id/editPass"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="153dp"
            android:autofillHints=""
            android:backgroundTint="@android:color/transparent"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:hint="@string/password_ek1_string"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="#FFFFFE"
            android:textSize="16sp"

            tools:ignore="TextFields,TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/padlock_icon"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="60dp"
            android:src="@drawable/lock"
            tools:ignore="MissingConstraints" />



        <CheckBox
            android:id="@+id/loginRemember"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="198dp"
            android:text="Remember me"
            android:textColor="@color/white"
            android:textSize="14dp"

            tools:ignore="TextSizeCheck" />
        <TextView
            android:id="@+id/forgot"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:gravity="left|center"
            android:layout_marginLeft="247dp"
            android:layout_marginTop="198dp"
            android:text="@string/forgot_password_string"
            android:textColor="@color/white"
            android:textSize="14sp"
            />


        <RelativeLayout
            android:id="@+id/btnlogin"
            android:layout_marginTop="245dp"
            android:layout_marginStart="0dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">


            <Button
                android:id="@+id/btnLogin"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="57dp"
                android:background="@color/white"
                android:text="LOGIN"
                android:textSize="18sp"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:onClick="onClick"

                />




        </RelativeLayout>
        <TextView
            android:id="@+id/noacc"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="310dp"
            android:gravity="left|center"
            android:layout_gravity="center_horizontal|center"
            android:text="@string/don_t_have_account__string"
            android:textColor="@color/white"
            android:textSize="14sp"
             />

        <TextView
            android:id="@+id/createacc"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginLeft="205dp"
            android:layout_marginTop="310dp"
            android:gravity="left|center"
            android:layout_gravity="center_horizontal|left"
            android:text="@string/create"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:textStyle="bold" />



    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>